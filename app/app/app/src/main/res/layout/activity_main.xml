<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background_dark">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/imgLogo"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:src="@mipmap/ic_launcher"
                android:scaleType="fitCenter"
                android:layout_gravity="center"
                android:layout_marginBottom="24dp" />

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CALCULADORA DE ISR 2026"
                android:textColor="#FFD700"
                android:textSize="36sp"
                android:textStyle="bold"
                android:gravity="center"
                android:shadowColor="#000000"
                android:shadowDx="4"
                android:shadowDy="4"
                android:shadowRadius="8"
                android:layout_marginBottom="32dp" />

            <EditText
                android:id="@+id/etSueldoBruto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Sueldo bruto mensual (MXN)"
                android:inputType="numberDecimal"
                android:imeOptions="actionNext"
                android:nextFocusDown="@id/etDeducciones"
                android:textColor="#FFFFFF"
                android:hintTextColor="#AAAAAA"
                android:background="@drawable/edittext_gold_glow"
                android:padding="16dp"
                android:layout_marginBottom="16dp" />

            <EditText
                android:id="@+id/etDeducciones"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Deducciones manuales (gastos, mÃ©dicos, etc.)"
                android:inputType="numberDecimal"
                android:imeOptions="actionDone"
                android:textColor="#FFFFFF"
                android:hintTextColor="#AAAAAA"
                android:background="@drawable/edittext_gold_glow"
                android:padding="16dp"
                android:layout_marginBottom="16dp" />

            <Switch
                android:id="@+id/switchIMSS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calcular cuota IMSS obrera aprox. (0.625%)"
                android:textColor="#FFD700"
                android:thumbTint="#FFD700"
                android:trackTint="#004D40"
                android:layout_marginBottom="24dp" />

            <Button
                android:id="@+id/btnCalcular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CALCULAR ISR"
                android:background="@drawable/button_gold_glow"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginBottom="32dp" />

            <TextView
                android:id="@+id/tvResultado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:background="@drawable/card_gold_glow"
                android:padding="20dp"
                android:layout_marginBottom="24dp" />

            <TextView
                android:id="@+id/tvEmote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="60sp"
                android:gravity="center"
                android:layout_marginBottom="24dp" />

            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/chartGrafica"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:visibility="gone"
                android:layout_marginBottom="24dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="16dp">

                <Button
                    android:id="@+id/btnUpgradePremium"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="ðŸ’Ž Premium - $99/mes o $699/aÃ±o"
                    android:background="@drawable/button_orange_glow"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_marginEnd="12dp" />

                <Button
                    android:id="@+id/btnUpgradeSuperPremium"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="ðŸ‘‘ SÃºper Premium - $149/mes o $1299/aÃ±o"
                    android:background="@drawable/button_gold_glow"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="14sp" />
            </LinearLayout>

            <com.google.android.gms.ads.AdView
                android:id="@+id/adView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:adSize="BANNER"
                app:adUnitId="ca-app-pub-3940256099942544/6300978111"
                android:layout_marginTop="32dp" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
